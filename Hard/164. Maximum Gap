class Solution {
public:
    int maximumGap(vector<int>& nums) {
        if(nums.size()<2)
            return 0;
        sort(nums.begin(),nums.end());
        signed int ans=INT_MIN;
        for(int i=0;i<nums.size()-1;i++)
        {
            if((nums[i+1]-nums[i])>ans)
            {
                ans=nums[i+1]-nums[i];
                if(ans<0)
                    ans*=-1;
            }
        }
        return ans;
    }
};
