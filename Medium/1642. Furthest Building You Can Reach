class Solution {
public:
    int furthestBuilding(vector<int>& heights, int bricks, int ladders) {
        priority_queue<int>pq;
        int i;
        for(i=0;i<heights.size()-1;i++){
            int d=heights[i+1]-heights[i];
            if(d<=0) continue;
            if(d<=bricks){
                bricks-=d;
                pq.push(d);
            }
            else if(ladders>0){
                if(!pq.empty() && d<pq.top()){
                    bricks+=pq.top();
                    pq.pop();
                    pq.push(d);
                    bricks-=d;
                }
                ladders--;
            }
            else break;
        }
    return i;
    }
};
