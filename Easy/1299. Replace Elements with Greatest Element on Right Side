//___________________________TLE________________________
//                   running forward O(n^2)
class Solution {
public:
    vector<int> replaceElements(vector<int>& arr) {
        for(int i=0;i<arr.size();i++)
        {
            int max=INT_MIN;
            for(int j=i+1;j<arr.size();j++)
            {
                if(arr[j]>max)
                    max=arr[j];
            }
            arr[i]=max;
        }
        arr[arr.size()-1]=-1;

        return arr;
    }
};

//running backwards O(n)
