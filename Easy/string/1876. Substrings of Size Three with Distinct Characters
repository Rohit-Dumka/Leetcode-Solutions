class Solution {
public:
    bool check(string s){
        int count[26]={0};
        for(int i=0;i<3;i++){
            count[s[i]-'a']++;
        }
        for(int i=0;i<26;i++)
            if(count[i]>1)
                return false;
        return true;
    }

    int countGoodSubstrings(string s) {
        if(s.size()<3)
            return 0;
        
        int ans=0;

        for(int i=0;i<s.size()-2;i++){
            if(check(s.substr(i,3)))
                ans++;
        }
        return ans;
    }
};
