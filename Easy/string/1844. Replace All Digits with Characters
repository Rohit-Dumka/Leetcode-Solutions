class Solution {
public:
    string replaceDigits(string s) {
        for(int i=0;i<s.size();i++){
            if(isdigit(s[i])){
                int x=s[i-1]-'a';
                int y=s[i]-'0';
                char z=(char)('a'+ x+y);
                s[i]=z;
            }
        }
        return s;
    }
};
